doctype html
html
  head
    link(rel='stylesheet', href='/css/index.css')
    link(rel='stylesheet', href='/css/bootstrap.css')
    link(rel='stylesheet', href='/css/c3.css')

    script(type='text/javascript', src='/js/vendor/jquery.js')
    script(type='text/javascript', src='/js/vendor/collapse.js')
    script(type='text/javascript', src='/js/vendor/lodash.min.js')
    script(type='text/javascript', src='/js/vendor/moment.min.js')
    script(type='text/javascript', src='/js/vendor/d3.min.js')
    script(type='text/javascript', src='/js/vendor/c3.min.js')

    link(rel='stylesheet', href='/js/local/scorecard.css')
    script(type='text/javascript', src='/js/local/scorecard.js')

    meta(property="og:title" content=ogtitle)
    meta(property="og:type" content="website")
    meta(property="og:description" content=ogdescription)
    meta(property="og:url" content=ogurl)
    meta(property="og:image" content=ogimageurl)

    meta(property="og:image:width" content="600")
    meta(property="og:image:height" content="300")

    title #{pagetitle}

  body(onload="initializedMainContent('#maincontent');")

    .container-fluid.text
        div(id="campaign") #{headline}
        div(id="description") #{description}

    .container-fluid.text
        button.col-2-md
            a(href="#" onclick="some();") scorecards 
        button.col-3-md
            a(href="#" onclick="details();") Javascrip details
        button.col-4-md
            a(href="#" onclick="some();") analyst visualization

        div(id="maincontent")

    include footer

