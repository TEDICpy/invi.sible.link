{
  "port": 7000,
  "interface": "0.0.0.0",
  "name": "storyteller",
  "schema": {
    "accesses": "accesses",
    "statistics": "statistics",
    "promises": "promises2",
    "surface": "surface",
    "evidences": "evidences",
    "details": "details",
    "summary": "summary",
    "judgment": "judgment"
  },
  "mongodb": "mongodb://localhost/ivl",
  "expected": [ "HK", "AMS", "WS", "casa" ],

  "watch": [
      "bin/storyteller.js",
      "lib/*.js",
      "sections/*.pug",
      "routes/*.js",
      "dist/css/**",
      "dist/js/**"
  ],
  "ignore": [
      "node_modules/**/node_modules",
      "sections/webscripts/*.js"
  ],
  "verbose": true,
  "exitcrash": false,
  "env": {
        "DEBUG": "storyteller,route:*,lib:*,-lib:urlutils"
  },
  "ext": "js css json pug"
}
