{
  "port": 7000,
  "name": "storyteller",
  "schema": {
    "accesses": "accesses",
    "subjects": "subjects"
  },
  "mongodb": "mongodb://localhost/ivl",

  "watch": [
      "storyteller.js",
      "lib/*.js",
      "sections/*.pug",
      "routes/*.js",
      "dist/css/**",
      "dist/js/**"
  ],
  "ignore": [
      "node_modules/**/node_modules",
      "sections/webscripts/*.js"
  ],
  "verbose": true,
  "exitcrash": false,
  "env": {
      "DEBUG": "chopsticks, directionTool, storyteller, vigile, dispatchPromise, mongo, pseudoRandom, stripper, subjectsOps, urlutils, various, getPage, getSubjects, getTasks, systemInfo"
  },
  "ext": "js css json pug"
}
