{
  "port": 7000,
  "interface": "0.0.0.0",
  "name": "storyteller",
  "schema": {
    "accesses": "accesses",
    "subjects": "subjects"
  },
  "mongodb": "mongodb://localhost/ivl",

  "watch": [
      "storyteller.js",
      "lib/*.js",
      "sections/*.pug",
      "routes/*.js",
      "dist/css/**",
      "dist/js/**"
  ],
  "ignore": [
      "node_modules/**/node_modules",
      "sections/webscripts/*.js"
  ],
  "verbose": true,
  "exitcrash": false,
  "env": {
        "DEBUG": "storyteller,route:*,lib:*"
  },
  "ext": "js css json pug"
}
