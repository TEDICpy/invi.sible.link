{
  "name": "exposer",
  "interface": "0.0.0.0",
  "port": 7300,
  "schema": {
    "thug": "thug",
    "phantom": "phantom",
    "accesses": "accesses",
    "anomalies": "anomalies"
  },
  "mongodb": "mongodb://localhost/chopsticks",
  "watch": [
      "exposer.js",
      "lib/*.js",
      "sections/*.pug",
      "routes/*.js",
      "dist/css/**",
      "dist/js/**"
  ],
  "ignore": [
      "node_modules/**/node_modules",
      "sections/webscripts/*.js"
  ],
  "verbose": true,
  "exitcrash": false,
  "env": {
      "DEBUG": "exposer,route:*,lib:*"
  },
  "ext": "js css json pug"
}
