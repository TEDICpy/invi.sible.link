{
  "port": 7200,
  "interface": "0.0.0.0",
  "name": "vigile",
  "schema": {
    "promises": "promises",
    "accesses": "accesses",
    "subjects": "subjects"
  },
  "mongodb": "mongodb://localhost/ivl",

  "watch": [
      "vigile.js",
      "lib/*.js",
      "sections/*.pug",
      "routes/*.js",
      "dist/css/**",
      "dist/js/**"
  ],
  "ignore": [
      "node_modules/**/node_modules",
      "sections/webscripts/*.js"
  ],
  "verbose": true,
  "exitcrash": false,
  "env": {
      "DEBUG": "chopsticks, directionTool, storyteller, vigile, dispatchPromise, pseudoRandom, stripper, subjectsOps, urlutils, various, getPage, getSubjects, getTasks, systemInfo"
  },
  "ext": "js css json pug"
}
